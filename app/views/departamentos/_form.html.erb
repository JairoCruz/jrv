<%= form_with model: @departamento do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Nombre del departamento", class: "form-label" %><br>
      <%= form.select :name, ["AHUACHAPAN","SANTA ANA","SONSONATE","LA LIBERTAD","CHALATENANGO","CUSCATLAN","SAN SALVADOR","LA PAZ","CABAÑAS","SAN VICENTE","USULUTAN","SAN MIGUEL","MORAZAN","LA UNION"] , {}, { :class => "form-control" } %>
      <% @departamento.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
      <% end %>
        </br>
      <%= form.label :junta, "N° JRV", class: "form-label" %><br>
      <%= form.text_field :junta , class: "form-control" %>
      <% @departamento.errors.full_messages_for(:junta).each do |message| %>
          <div><%= message %></div>
      <% end %>

      </br>
      <%= form.fields_for :jrvs do |f| %>
        <div class="row g-4">
          <div class="col-auto">
          
            <%= f.label :partido, "Partido", class: "form-label" %><br>
            <%= f.select :partido , ["FMLN","NUESTRO TIEMPO","NUEVAS IDEAS","PDC","PCN","GANA","CD","ARENA","NO PARTIDARIO","PCN-DS","NUEVAS IDEAS-GANA","ARENA-DS","ARENA-PCN"], {}, { :class => "form-control" } %>
          </div>

          <div class="col-auto">
            <%= f.label :enteros, "Enteros", class: "form-label" %>
            
            <%= f.text_field :enteros , class: "form-control"%>
            <% @departamento.errors.full_messages_for(:'jrvs.enteros').each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div class="col-auto">
            <%= f.label :fraccionados, "Fraccionados", class: "form-label" %>
            
            <%= f.text_field :fraccionados , class: "form-control"%>
            <% @departamento.errors.full_messages_for(:'jrvs.fraccionados').each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div class="col-auto">
            </br>
            </br>
            <div class="form-check">
              <%= f.check_box :_destroy, class: "form-check" %>
            </div>
            
          </div>

        </div>
      <% end %>

    </div>
    </br>
    
    <%= form.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to "Regresar", departamentos_path, class: "btn btn-secondary"%>
  
  <% end %>