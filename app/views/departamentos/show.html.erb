<div class="container">
</br>
<h1><%= @departamento.name %></h1>
<h3>JRV NÂ° <%= @departamento.junta %> </h3>

</br>
<h5>RESULTADOS</h5>
<div class="table-responsive">
<table class="table table-bordered">
<thead>
<tr>
     <th scope="col">PARTIDOS</th>
     <th scope="col">ENTEROS</th>
     <th scope="col">FRACCIONADOS</th>
     <th scope="col">TOTAL</th>

</tr>
</thead> 
<tbody>
    <% @departamento.jrvs.each do |jrv| %>
        <tr>
           <td><%= jrv.partido %></td>
           <td><%= jrv.enteros %></td>
           <td><%= "%.8f" % jrv.fraccionados %></td>
           <td><%= "%.8f" % jrv.total %></td>
        </tr>
    <% end %>
</tbody>
<tfoot>
    <tr>
        <td><strong>TOTAL</strong></td>
        <td><strong><%= @departamento.jrvs.sum(:enteros) %></strong></td>
        <td><strong><%= "%.8f" % @departamento.jrvs.sum(:fraccionados) %></strong></td>
        <td><strong><%= "%.8f" % @departamento.jrvs.sum(:total) %></strong></td>
    </tr>

</tfoot>
</table>

</div>

<%= link_to "Nueva JRV", new_departamento_path, class: "btn btn-primary" %>
<%= link_to "Regresar", departamentos_path, class: "btn btn-secondary"%>
</div>